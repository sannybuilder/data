<mode id="gta3_sbl" title="GTA III (SBL)" game="gta3" type="default">
    <data>@sb:\data\gta3_sbl\</data>
        <!-- main files -->
    <library>@sb:\data\gta3_sbl\gta3.json</library>
    <classes>@sb:\data\gta3_sbl\classes.db</classes>
    <constants>@sb:\data\gta3_sbl\constants.txt</constants>
    <enums>@sb:\data\gta3_sbl\enums.txt</enums>
    <ide>@game:\data\default.ide</ide>
    <keywords>@sb:\data\gta3_sbl\keywords.txt</keywords>

    <!-- decompiling -->
    <missions>@sb:\data\gta3_sbl\missions.txt</missions>
    <variables>@sb:\data\gta3_sbl\CustomVariables.ini</variables>
    <text format="gta3">@game:\text\american.gxt</text>
    
    <!-- ide -->
